<Window x:Class="ejercicioGrid2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejercicioGrid2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="contenedor" >
    <Grid.RowDefinitions>
      <RowDefinition Height="25*" />
      <RowDefinition Height="27*" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="51*"/>
      <ColumnDefinition Width="105*"/>
      <ColumnDefinition Width="64*"/>
    </Grid.ColumnDefinitions>

    <Button Grid.Row="1" Grid.Column="1" Height="Auto" Width="Auto" MaxHeight="50" 
            MaxWidth="200" Content="BTN 1 1" FontSize="24" />
    <Button Grid.Row="0" Grid.Column="2" Height="Auto" Width="Auto" MaxHeight="50"
            MaxWidth="200" Content="BTN 0 2" FontSize="24"/>
  </Grid>
</Window>
