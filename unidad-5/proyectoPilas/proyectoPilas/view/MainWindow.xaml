<Window x:Class="proyectoPilas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyectoPilas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="6*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- Frame para manejar la navgeacion -->
    <Frame Name="MainFrame" Content="Frame" NavigationUIVisibility="Hidden" Margin="5" Grid.Column="0" Grid.Row="0"/>
    <Button Name="btnDetailPage" Content="Detalles" Grid.Column="0" Grid.Row="1" Margin="5" Click="btnDetailPage_Click"/>
  </Grid>
</Window>
