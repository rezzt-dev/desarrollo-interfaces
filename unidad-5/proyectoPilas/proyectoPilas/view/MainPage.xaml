<Page x:Class="proyectoPilas.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:proyectoPilas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="6*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Label Name="lblTitulo" Content="PAGINA PRINCIPAL" Grid.Row="0" Grid.Column="0" Margin="5" Background="AliceBlue"/>
    <Button Name="btnDetailPage" Content="Detalles" Grid.Column="0" Grid.Row="1" Margin="5" Click="btnDetailPage_Click"/>
  </Grid>
</Page>
